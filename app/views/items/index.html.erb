<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Item code</th>
    <th>Mall code</th>
    <th>Url</th>
    <th>Price</th>
    <th>Discount rate</th>
    <th>Discount price</th>
    <th>Fabric</th>
    <th>Laundry</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.item_code %></td>
    <td><%= item.mall_code %></td>
    <td><%= item.url %></td>
    <td><%= item.price %></td>
    <td><%= item.discount_rate %></td>
    <td><%= item.discount_price %></td>
    <td><%= item.fabric %></td>
    <td><%= item.laundry %></td>
    <td><%= item.description %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

